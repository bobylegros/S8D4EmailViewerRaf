<p id="notice"><%= notice %></p>

<h1>Emails</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= link_to 'New Email', new_email_path %>
    <% @emails.each do |email| %>
      <tr>
        <td><%= link_to "#{email.object}", email, :remote => true, :class => 'show_email' %></td>

        <td><%= link_to 'Destroy', email, method: :delete, data: { confirm: 'Are you sure?' }, :remote => true, :class => 'delete_email' %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% while %>
<div>


<id="current_mail">
</div>
<% end %>
